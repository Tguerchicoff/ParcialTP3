<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:cardBackgroundColor="#2196F3"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="#AC1B1B"
        android:baselineAlignBottom="true"
        tools:image="sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Nombre" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCards1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dog_paw" />

            <TextView
                android:id="@+id/txtCardBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="Raza" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCards2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dog_paw" />

            <TextView
                android:id="@+id/txtCardSubBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="SubRaza" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCardAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textSize="17sp"
                tools:text="Edad" />

            <TextView
                android:id="@+id/txtCardGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="17sp"
                tools:text="Macho o Hembra" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>